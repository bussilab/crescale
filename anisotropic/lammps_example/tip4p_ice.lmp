##############################################################################################
#### Atoms types - mass - charge
##############################################################################################
#@ 2 atom types

variable OT   equal 1
variable HT   equal 2

##############################################################################################
#### Atom masses
##############################################################################################

mass ${OT}     15.9994
mass ${HT}      1.008

##############################################################################################
#### Atom charges not set in lammps input
##############################################################################################

set type ${OT}  charge    -1.1794
set type ${HT}  charge     0.5897

##############################################################################################
#### Covalent bond parameters
##############################################################################################
#@ 1 bond types

bond_style harmonic
#@ HT - OT
bond_coeff    1    100.        0.9572

##############################################################################################
#### Covalent angle parameters
##############################################################################################
#@ 1 angle types

angle_style harmonic
#@ HT - OT - HT
angle_coeff     1     50.      104.52

##############################################################################################
# Pair potentials - TIP4P Ice
##############################################################################################

pair_style lj/cut/tip4p/long 1 2 1 1  0.1577 10.
pair_modify mix arithmetic tail yes
pair_coeff  ${OT}    ${OT}     0.009143        3.1668
pair_coeff  ${HT}    ${HT}     0.0000000000    0.000

#########################################################################################################
# Parameters for reciprocal space electrostatics
#########################################################################################################

kspace_style pppm/tip4p 1.0e-5
kspace_modify fftbench no

fix shake all shake 0.0001 20 0 b 1 a 1
